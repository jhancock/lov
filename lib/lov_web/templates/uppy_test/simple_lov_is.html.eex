<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Simple lov.is Uppy test</title>
    <link href="https://transloadit.edgly.net/releases/uppy/v1.5.2/uppy.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="grid">
      <div class="column-full">
        <div class="UppyInput"></div>
        <div class="UppyInput-Progress"></div>
      </div>
    </div>

    <script src="https://transloadit.edgly.net/releases/uppy/v1.5.2/uppy.min.js"></script>
    <script>
      var Uppy = Uppy.Core({debug: true, autoProceed: true})
        .use(Uppy.FileInput, { target: '.UppyInput', pretty: false })
        .use(Uppy.Tus, { endpoint: 'https://lov.is/upload/', limit: 5, resume: true, autoRetry: true, retryDelays: [0, 1000, 3000, 5000] })
        .use(Uppy.StatusBar, {
          target: '.UppyInput-Progress',
          hideUploadButton: true,
          hideAfterFinish: false
        })
    </script>
  </body>
</html>
